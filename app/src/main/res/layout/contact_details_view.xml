<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="20dp"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="4dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name"
                style="@style/HeaderTextViewV4"
                android:background="@color/transparent"
                android:clickable="false"
                android:ellipsize="end"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:maxLines="1"
                android:textSize="22sp"
                android:visibility="visible"
                android:paddingStart="24dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                tools:text="Register should always test with le. "
                tools:visibility="visible" />

            <TextView
                android:id="@+id/email"
                style="@style/DesignV4InfoText"
                android:background="@color/transparent"
                android:clickable="false"
                android:ellipsize="end"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:maxLines="1"
                android:textSize="16sp"
                android:visibility="visible"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:drawableStart="@drawable/email"
                android:drawablePadding="4dp"
                tools:text="Register should always test with le. "
                tools:visibility="visible" />

            <TextView
                android:id="@+id/phone"
                style="@style/DesignV4InfoText"
                android:background="@color/transparent"
                android:clickable="false"
                android:ellipsize="end"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:maxLines="1"
                android:textSize="16sp"
                android:visibility="visible"
                android:drawablePadding="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:drawableStart="@drawable/phone"
                tools:text="Register should always test with le. "
                tools:visibility="visible" />

            <TextView
                android:id="@+id/company"
                style="@style/DesignV4InfoText"
                android:background="@color/transparent"
                android:clickable="false"
                android:ellipsize="end"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:maxLines="3"
                android:textSize="16sp"
                android:visibility="visible"
                android:drawablePadding="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:drawableStart="@drawable/work"
                tools:text="Register should always test with le. "
                tools:visibility="visible" />

            <TextView
                android:id="@+id/website"
                style="@style/DesignV4InfoText"
                android:background="@color/transparent"
                android:clickable="false"
                android:ellipsize="end"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:maxLines="1"
                android:textSize="16sp"
                android:visibility="visible"
                android:drawablePadding="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:drawableStart="@drawable/website"
                tools:text="Register should always test with le. "
                tools:visibility="visible" />

            <TextView
                android:id="@+id/address"
                style="@style/DesignV4InfoText"
                android:background="@color/transparent"
                android:clickable="false"
                android:ellipsize="end"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:maxLines="2"
                android:textSize="16sp"
                android:visibility="visible"
                android:drawablePadding="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:drawableStart="@drawable/address"
                tools:text="Register should always test with le. "
                tools:visibility="visible" />

            <TextView
                android:id="@+id/username"
                style="@style/DesignV4InfoText"
                android:background="@color/transparent"
                android:clickable="false"
                android:ellipsize="end"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:maxLines="1"
                android:textSize="16sp"
                android:visibility="visible"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:paddingStart="2dp"
                tools:text="Register should always test with le. "
                tools:visibility="visible" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>